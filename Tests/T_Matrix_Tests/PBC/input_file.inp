&GLOBAL
  PROJECT BENZENE
  RUN_TYPE ENERGY_FORCE
  PRINT_LEVEL MEDIUM
&END GLOBAL
&FORCE_EVAL
  METHOD Quickstep
  &SUBSYS
    &KIND C
      ELEMENT   C
      BASIS_SET TZV2P-GTH
      POTENTIAL GTH-PBE-q4
    &END KIND
	&KIND H
	ELEMENT	H
	BASIS_SET TZV2P-GTH
	POTENTIAL GTH-PBE-q1
	&END KIND
    &CELL
      A     7.000000000    0.000000000    0.000000000
      B     0.000000000    7.00000000    0.000000000
      C     0.000000000    0.000000000    7.000000000
    &END CELL
 &TOPOLOGY
         COORD_FILE_NAME Benzene.xyz
         COORD_FILE_FORMAT XYZ
      &END
  &END SUBSYS
  &DFT
    BASIS_SET_FILE_NAME  GTH_BASIS_SETS
    POTENTIAL_FILE_NAME  GTH_POTENTIALS
    &QS
    EPS_DEFAULT              1.0E-18
    EPS_PGF_ORB              1.0E-35
    EPS_FILTER_MATRIX        0.0E+0
     MIN_PAIR_LIST_RADIUS -1
    &END QS
    &MGRID
      NGRIDS 4
      CUTOFF 300
      REL_CUTOFF 60
    &END MGRID
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
    &SCF
      SCF_GUESS RESTART
      EPS_SCF 1.0E-7
      MAX_SCF 300
      &DIAGONALIZATION  ON
        ALGORITHM STANDARD
      &END DIAGONALIZATION
      &MIXING  T
        METHOD BROYDEN_MIXING
        ALPHA 0.4
        NBROYDEN 8
      &END MIXING
    &END SCF
  &PRINT
         ! at the end of the SCF procedure generate cube files of the density
         &AO_MATRICES ON
         NDIGITS 15
    	ADD_LAST SYMBOLIC
    	KOHN_SHAM_MATRIX .TRUE.
    	OVERLAP .TRUE.
    	FILENAME =KSHamiltonian
    	&END AO_MATRICES
         ! compute eigenvalues and homo-lumo gap 
         &MO_CUBES
            NLUMO 4
            NHOMO 4
            WRITE_CUBE .FALSE.
         &END
      &END
  &END DFT
  &PRINT
    &FORCES ON
    &END FORCES
  &END PRINT
&END FORCE_EVAL
